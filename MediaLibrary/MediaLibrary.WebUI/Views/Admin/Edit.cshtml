@model PirateThis.Domain.Entities.Song

@{
    ViewBag.Title = "Admin: Edit " + @Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit @Model.Title</h1>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorForModel()

    <div class="editor-label">Image</div>
    <div class="editor-field">
        @if (Model.ImageData == null)
        {
            @:None
        }
        else
        {
            <img width="150" height="150" src="@Url.Action("GetImage", "Song", new { Model.SongID })" />
        }
        <div>Upload new image: <input type="file" name="Image" /></div>
    </div>
    
    <div class="editor-label">MP3</div>
    <div class="editor-field">
        @if (Model.MP3Data == null)
        {
            <div>No MP3 currently uploaded.</div>
        }
        else
        {
            <div>MP3 Loaded.</div>
        }
        <div>Upload new MP3: <input type="file" name="MP3" /></div>
    </div>    

    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "Index")
}
